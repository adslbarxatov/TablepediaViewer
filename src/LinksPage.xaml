<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.LinksPage">

	<StackLayout>

		<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
			<Button x:Name="CurrentPageButton" VerticalOptions="Center" />
			<Button x:Name="SaveButton" VerticalOptions="Center" />
			<Button x:Name="AllNewsButton" VerticalOptions="Center" />
			<Button x:Name="MenuButton" VerticalOptions="Center" />
		</StackLayout>

		<ScrollView x:Name="MainScroll" >
			<StackLayout x:Name="MainLayout" Orientation="Vertical" />
		</ScrollView>

		<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
			<Button x:Name="LockedLinkButton1" VerticalOptions="Center" />
			<Button x:Name="LockedLinkButton2" VerticalOptions="Center" />

			<Label />

			<Button x:Name="SegmentDecButton" VerticalOptions="Center" />
			<Button x:Name="SegmentLabel" VerticalOptions="Center" />
			<Button x:Name="SegmentIncButton" VerticalOptions="Center" />

			<Label />

			<Button x:Name="LockedLinkButton3" VerticalOptions="Center" />
			<Button x:Name="LockedLinkButton4" VerticalOptions="Center" />
		</StackLayout>

	</StackLayout>
</ContentPage>
    